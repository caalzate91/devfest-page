---
import type { CollectionEntry } from "astro:content";
import dayjs from "dayjs";

type Talk = CollectionEntry<"talks">["data"][0];

interface Props {
  talk: Talk;
}
const { talk } = Astro.props;
---

<div
  class="flex flex-col md:flex-row gap-4 items-stretch border-b py-8 px-4 hover:bg-df-white-bg group"
>
  <p class="text-[#F09828] text-sm lg:text-md font-mono">
    {dayjs(talk.startDate).format("hh:mm A")}
  </p>
  <slot />
</div>
