---
import { Image } from 'astro:assets'

import DevFestLogoImage from '../../assets/images/devfest-cali-2023.svg'
import BarranqueroImage from '../../assets/images/barranquero.svg'
import Counter from '../Counter'
---

<header class="">
  <div
    class="bg-white w-full flex flex-row justify-center items-center md:gap-4"
  >
    <span class="font-bold hidden md:block">Empieza en...</span>

    <div class="flex flex-1 md:flex-none flex-row justify-center bg-green-500">
      <Counter targetDate="02/12/2023" client:load />
      <div class="">
        <a
          href="https://peewah.co/events/devfestcali"
          aria-label="Get Tickets"
          target="_blank"
          class="text-sm h-16 grow flex flex-col justify-center items-center px-2 md:px-8 bg-df-lime-400 hover:bg-df-lime-500 transition-all duration-300 uppercase font-bold"
          >Conseguir Ticket</a
        >
      </div>
    </div>
  </div>

  <div class="hero relative flex flex-col justify-center items-center py-12 md:py-12 h-auto md:h-[calc(100vh-128px)]" >
    <div class="hero-image flex flex-col justify-center items-center md:h-[960px] md:w-[1280px] animate__animated animate__jackInTheBox animate__fast" >
      <div class="relative w-full h-full">
        <Image
          class="relative md:absolute md:left-[45%] md:top-[35%] w-[200px] md:w-[190px] xl:w-[200px] animate__animated animate__bounceInUp"
          src={DevFestLogoImage}
          alt="DevFest Cali 2023"
        />
        <Image
          class=" hidden md:block absolute left-[29%] top-[32%] w-[185px] md:w-[185px] animate__animated animate__bounceInLeft animate__delay-2s"
          src={BarranqueroImage}
          alt="DevFest Cali 2023"
        />
      </div>
    </div>

    <div class="bg-hero-mobile"></div>
  </div>


  <div class="flex flex-col md:flex-row items-center justify-center gap-4 bg-black text-white py-8 px-4 text-center md:text-left" >
    <span>No te pod√©s perder este evento</span>
    <a
      href="https://peewah.co/events/devfestcali"
      target="_blank"
      class="flex flex-col justify-center items-center px-8 py-4 bg-df-lime-400 hover:bg-df-lime-500 transition-all duration-300 rounded-md uppercase font-bold text-sm text-black"
      >Conseguir Ticket</a
    >
  </div>
</header>
