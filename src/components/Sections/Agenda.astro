---
import { getCollection } from "astro:content";
import AgendaManager from "@components/AgendaItem/AgendaManager";

// We will capture the Astro collections here and pass throgh React props
const talks = await getCollection("talks");
---

<div
  class="relative bg-[url('/assets/images/BG-Agenda-top-MD.svg')] bg-cover bg-no-repeat w-full"
  id="agenda"
>
  <div class="aspect-[1080/170]"></div>
</div>

<section
  class="bg-[#8FD9EF] relative flex items-center justify-center flex-col"
>
  <h2
    class="absolute -top-7 md:-top-20 left-1/2 -translate-x-1/2 text-2xl md:text-4xl lg:text-5xl font-bold"
  >
    Cronograma
  </h2>
  <span class="text-md md:text-lg font-base mt-5 lg:mt-0 mb-2"
    >Lugar: Universidad Autónoma de Occidente Cali.</span
  >
  <span class="text-xs sm:text-md md:text-lg font-base mb-10">
    Centro Valle del Lili - Cl 25 # 115-85 Km. 2 vía Cali-Jamundí</span
  >
  <AgendaManager talks={talks} client:only="react" />
</section>
<div
  class="relative bg-[url('/assets/images/BG-Agenda-bottom-MD.svg')] bg-cover bg-bottom bg-no-repeat w-full mb-32"
>
  <div class="aspect-[1080/190]"></div>
</div>
